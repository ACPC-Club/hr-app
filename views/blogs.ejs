<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Blogs</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body>
    <%- include("./admin-partials/header.ejs", { title: "Blogs" }) %>
    <div class="content container mt-5">
      <h1>Manage Blogs</h1>
      <hr />
      <div class="row mb-4">
        <div class="col">
          <button
            class="btn btn-success"
            data-bs-toggle="modal"
            data-bs-target="#addBlogModal"
          >
            Add New Blog
          </button>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead class="sticky-top bg-light">
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th>Brief</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% blogs.forEach(function(blog) { %>
            <tr>
              <td><%= blog.title %></td>
              <td><%= blog.author %></td>
              <td><%= blog.brief %></td>
              <td><%= blog.date.toDateString() %></td>
              <td>
                <button
                  class="btn btn-primary btn-sm"
                  data-bs-toggle="modal"
                  data-bs-target="#editBlogModal<%= blog._id %>"
                >
                  Edit
                </button>
                <form
                  action="/admin/blogs/delete/<%= blog._id %>"
                  method="POST"
                  class="d-inline"
                >
                  <button type="submit" class="btn btn-danger btn-sm">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Add Blog Modal -->
    <div
      class="modal fade"
      id="addBlogModal"
      tabindex="-1"
      aria-labelledby="addBlogModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <form
            action="/admin/blogs/add"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="modal-header">
              <h5 class="modal-title" id="addBlogModalLabel">Add New Blog</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input
                  type="text"
                  class="form-control"
                  id="title"
                  name="title"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="author" class="form-label">Author</label>
                <input
                  type="text"
                  class="form-control"
                  id="author"
                  name="author"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="brief" class="form-label">Brief</label>
                <textarea
                  class="form-control"
                  id="brief"
                  name="brief"
                  rows="2"
                  required
                ></textarea>
              </div>
              <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea
                  class="form-control"
                  id="content"
                  name="content"
                  rows="5"
                  required
                ></textarea>
              </div>
              <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input
                  type="file"
                  class="form-control"
                  id="image"
                  name="image"
                  required
                />
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <button type="submit" class="btn btn-primary">Add Blog</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js"></script>
  </body>
</html>
