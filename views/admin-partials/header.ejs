<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ACPC Admin Sidebar</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
      .admin-title {
        font-size: 2rem; /* Adjust this value as needed */
        font-weight: bold; /* Optional: make the text bold */
      }
      body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      .content {
        margin-left: 270px; /* Increased margin to add space */
        padding: 1rem;
        width: calc(100% - 270px); /* Adjusted width accordingly */
      }
      .btn-group .btn {
        margin-right: 5px; /* Adjust as needed */
      }
      .btn-group .btn:last-child {
        margin-right: 0;
      }
      body {
        display: flex;
        height: 100vh;
        margin: 0;
      }
      .sidebar {
        width: 250px;
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        background-color: #f8f9fa;
        border-right: 1px solid #dee2e6;
        padding: 1rem;
      }
      .sidebar .nav-link {
        color: #333;
        margin-bottom: 10px;
      }
      .sidebar .nav-link.active {
        background-color: #007bff;
        color: white;
        border-radius: 5px;
      }
      .sidebar .dropdown {
        margin-top: auto;
      }
      .sidebar .dropdown-toggle {
        width: 100%;
        text-align: left;
        padding: 0.5rem 1rem;
        color: #333;
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 5px;
      }
      .sidebar .dropdown-menu {
        width: 100%;
      }
    </style>
  </head>
  <body>
    <div class="sidebar d-flex flex-column p-3 bg-light">
      <a
        href="/admin"
        class="d-flex align-items-center mb-3 text-decoration-none"
      >
        <span class="fs-4 admin-title">ACPC Admin</span>
      </a>
      <hr />
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a href="/" class="nav-link <%= title === 'Home' ? 'active' : '' %>">
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#home"></use>
            </svg>
            Home
          </a>
        </li>
        <li>
          <a
            href="/admin"
            class="nav-link <%= title === 'Dashboard' ? 'active' : '' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#speedometer2"></use>
            </svg>
            Dashboard
          </a>
        </li>
        <li>
          <a
            href="/admin/events"
            class="nav-link <%= title === 'Events' ? 'active' : '' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#table"></use>
            </svg>
            Events
          </a>
        </li>
        <li>
          <a
            href="/admin/members"
            class="nav-link <%= title === 'Members' ? 'active' : '' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#people-circle"></use>
            </svg>
            Members
          </a>
        </li>
      </ul>
      <hr />
      <div class="dropdown">
        <a
          href="#"
          class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle"
          id="dropdownUser1"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <svg class="bi pe-none me-2" width="16" height="16">
            <use xlink:href="#logout"></use>
          </svg>
          <strong>Logout</strong>
        </a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js"></script>
  </body>
</html>

<%-include("./icons.ejs")%>
