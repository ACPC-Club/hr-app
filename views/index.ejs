  .card {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border: none;
  }
  .card-header {
    background-color: #007bff;
    color: white;
    text-align: center;
    font-weight: bold;
  }
  .card-body {
    text-align: center;
  }
  .btn-primary {
    background-color: #007bff;
    border: none;
  }
  .btn-primary:hover {
    background-color: #0056b3;
  }
</style>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>Sign In</h3>
        </div>
        <div class="card-body">
          <p>Welcome back! You are already logged in.</p>
          <p>To access your dashboard, click the button below.</p>
          <p>
            If you believe this is an error, please contact support for
            assistance.
          </p>
          <a href="/admin" class="btn btn-primary mt-3">Go to Dashboard</a>
        </div>
      </div>
    </div>
  </div>
</div>
<% } %>

<script src="/js/validateLogin.js"></script>
