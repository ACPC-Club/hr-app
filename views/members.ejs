<%- include("./admin-partials/header.ejs", { title: "Members" }) %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
      .btn-group .btn {
        margin-right: 5px; /* Adjust as needed */
      }

      .btn-group .btn:last-child {
        margin-right: 0;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <div class="row mb-4">
        <div class="col">
          <h1>Users</h1>
        </div>
        <div class="col text-right">
          <button
            class="btn btn-success"
            data-bs-toggle="modal"
            data-bs-target="#addMemberModal"
          >
            Add Member
          </button>
          <button
            class="btn btn-secondary"
            data-bs-toggle="modal"
            data-bs-target="#filterModal"
          >
            Filter
          </button>
          <button
            class="btn btn-info"
            data-bs-toggle="modal"
            data-bs-target="#sortModal"
          >
            Sort
          </button>
        </div>
      </div>
      <div class="row mb-4">
        <div class="col">
          <input
            type="text"
            id="search-bar"
            class="form-control"
            placeholder="Search by name..."
          />
        </div>
      </div>
      <div class="table-responsive" style="max-height: 75vh; max-width: 75vw">
        <table class="table table-bordered">
          <thead class="sticky-top bg-light">
            <tr>
              <th>Name</th>
              <th>Phone Number</th>
              <th>University ID</th>
              <th>Department</th>
              <th>Year</th>
              <th>Points</th>
              <th>Warnings</th>
              <th>Board Member</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="member-table-body"></tbody>
        </table>
      </div>
      <nav>
        <ul class="pagination" id="pagination-controls"></ul>
      </nav>
    </div>

    <%- include("./admin-partials/member-partials/editUserModal.ejs") %> <%-
    include("./admin-partials/member-partials/deleteUserModal.ejs") %> <%-
    include("./admin-partials/member-partials/addUserModal.ejs") %> <%-
    include("./admin-partials/member-partials/filterModal.ejs") %> <%-
    include("./admin-partials/member-partials/sortModal.ejs") %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/js/memberManagement.js"></script>
    <%- include("./admin-partials/footer.ejs") %>
  </body>
</html>
